{
    "manifest_version": 3,
    "name": "MyGES chrome extension",
    "version": "1.0.0",
    "action": {  "default_popup": "../popup.html"},
    "icons": {
    },
    "background": {
      "service_worker": "background/index.ts",
        "type": "module"
      },
    "permissions": [
        "activeTab",
        "cookies",
        "declarativeContent",
        "scripting",
        "storage",
        "tabs"
     ],
     "content_scripts": [
        {
          "matches": ["https://myges.fr/*"],
          "js": ["content-scripts/main.tsx"],
          "run_at": "document_end"
        }
      ],
      "web_accessible_resources": [{
        "matches": [ "<all_urls>"],
        "resources": ["assets/*"]
      }]
  }